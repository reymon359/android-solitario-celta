<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ResultadosActivity">

    <TextView
        android:id="@+id/tvCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/txtOpcionMejoresResultados"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btEliminarResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtButtonEliminarResultados" />

    <ListView
        android:id="@+id/lvResultados"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello World!" >


    </ListView>




</LinearLayout>

